students = int(input("Enter number of students: "))
subjects = int(input("Enter number of subjects: "))

class_total = 0

for i in range(1, students + 1):
    print(f"\nStudent {i}")
    total = 0  
    
    for j in range(1, subjects + 1):
        score = float(input(f"Enter score {j}: "))
        total += score

    student_avg = total / subjects
    print(f"Average for Student {i} = {student_avg:.1f}")

    class_total += student_avg

class_average = class_total / students
print(f"\nClass Average = {class_average:.1f}")
